diff -u e-smith-proxy/root/etc/e-smith/db/configuration/migrate/20squid:1.2 e-smith-proxy/root/etc/e-smith/db/configuration/migrate/20squid:removed
--- e-smith-proxy/root/etc/e-smith/db/configuration/migrate/20squid:1.2	Fri Dec 19 15:45:29 2003
+++ e-smith-proxy/root/etc/e-smith/db/configuration/migrate/20squid	Wed Dec 31 19:00:00 1969
@@ -1,28 +0,0 @@
-{
-    # Make sure that /var/log/squid, and it's files, are owned by squid, and
-    # that /var/log/squid/run, and it's files, are owned by smelog.
-    system('/usr/bin/find',
-           '/var/log/squid',
-           '-maxdepth',
-           '1',
-           '-exec',
-           '/bin/chown',
-           'squid:nofiles',
-           '{}',
-           ';') == 0
-        or warn "Failed to chown /var/log/squid tree\n";
-    system('/usr/bin/find',
-           '/var/log/squid/run',
-           '-exec',
-           '/bin/chown',
-           'smelog:nofiles',
-           '{}',
-           ';') == 0
-        or warn "Failed to chown /var/log/squid/run tree\n";
-    system('/bin/chown',
-           'squid:smelog',
-           '/var/log/squid') == 0
-        or warn "Failed to chown /var/log/squid\n";
-    chmod (0770, '/var/log/squid')
-        or warn "Failed to chmod /var/log/squid\n";
-}
